<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>gradeSemesterController</servlet-name>
        <servlet-class>controller.gradeSemesterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gradeTranscriptController</servlet-name>
        <servlet-class>controller.gradeTranscriptController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addGradeController</servlet-name>
        <servlet-class>controller.addGradeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gradeSemesterController</servlet-name>
        <url-pattern>/view/gradeSemester</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gradeTranscriptController</servlet-name>
        <url-pattern>/view/gradeTranscript</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addGradeController</servlet-name>
        <url-pattern>/view/addGrade</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
