<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>FilterHome</filter-name>
        <filter-class>Filter.FilterHome</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterHome</filter-name>
        <url-pattern>/view/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>gradeSemesterController</servlet-name>
        <servlet-class>controller.gradeSemesterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gradeTranscriptController</servlet-name>
        <servlet-class>controller.gradeTranscriptController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addGradeController</servlet-name>
        <servlet-class>controller.addGradeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewGradeController</servlet-name>
        <servlet-class>controller.viewGradeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showInfor</servlet-name>
        <servlet-class>controller.showInfor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>homeStudentController</servlet-name>
        <servlet-class>controller.homeStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>homeTeacherController</servlet-name>
        <servlet-class>controller.homeTeacherController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gradeSemesterController</servlet-name>
        <url-pattern>/view/gradeSemester</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gradeTranscriptController</servlet-name>
        <url-pattern>/view/gradeTranscript</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addGradeController</servlet-name>
        <url-pattern>/view/addGrade</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewGradeController</servlet-name>
        <url-pattern>/view/viewGrade</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/view/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showInfor</servlet-name>
        <url-pattern>/infor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homeStudentController</servlet-name>
        <url-pattern>/view/homeStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homeTeacherController</servlet-name>
        <url-pattern>/view/homeTeacher</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
